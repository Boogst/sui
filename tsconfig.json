    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
  },
  "include": ["packages/**/src/**/*.ts", "packages/**/src/**/*.tsx"],
  "exclude": ["node_modules", "lib"],
