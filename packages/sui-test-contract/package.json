{
  "name": "@s-ui/test-contract",
  "version": "2.0.0",
  "description": "Useful tooling for defining contract tests (based on Pact) that will generate contract documents.",
  "license": "ISC",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "sui-test-contract": "bin/index.js"
  },
  "scripts": {
    "lib": "babel --presets sui ./src --out-dir ./lib",
    "prepublishOnly": "npm run lib",
    "test": "npm run test:server",
    "test:server": "NODE_ENV=test sui-test server",
    "test:server:watch": "npm run test:server -- --watch"
  },
  "dependencies": {
    "@pact-foundation/absolute-version": "0.0.4",
    "@pact-foundation/pact": "9.16.4",
    "@pactflow/pact-msw-adapter": "1.2.0",
    "commander": "8.3.0"
  },
  "devDependencies": {
    "@s-ui/domain": "2",
    "msw": "0.36.8"
  },
  "peerDependencies": {
    "msw": "0.36.8"
  }
}
